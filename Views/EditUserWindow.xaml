<Window x:Class="Yamah.Views.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yamah.Views"
        mc:Ignorable="d"
        Title="EditUserWindow" Height="200" Width="200"
        Background="#1E1E1E">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <TextBlock Text="Username" Foreground="White" FontWeight="Bold"/>
            <TextBox
                x:Name="UsernameBox"
                Text="Username"
                Background="Black"
                Foreground="White"/>
            <TextBlock Text="Email" Foreground="White" FontWeight="Bold"/>
            <TextBox
                x:Name="EmailBox"
                Text="Email"
                Background="Black"
                Foreground="White"/>
            <TextBlock Text="Role" Foreground="White" FontWeight="Bold"/>
            <ComboBox x:Name="RoleBox" Background="Transparent">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Manager"/>
                <ComboBoxItem Content="Basic"/>
            </ComboBox>

            <Button Margin="0 30 0 0" Content="Save" Click="ButtonBase_OnClick"/>
        </StackPanel>
    </Grid>
</Window>